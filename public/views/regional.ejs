<%- include('./header') -%>
<div class="page-main">
    <ol class="breadcrumb">
        <li><a href="#">数据分析</a></li>
        <li><a href="#">地区统计</a></li>
    </ol>

    <div class="row">
        <div class="col-md-6">
            <div id="main2" style="width: 100%;height:400px;"></div>
        </div>
        <div class="col-md-6">
            <div id="main1" style="width: 100%;height:400px;"></div>
        </div>
    </div>

</div>

<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart1 = echarts.init(document.getElementById('main1'));

    var option1 = {
        title : {
            text: '2015年电影业制片国家统计',
            subtext: '数据来源于豆瓣电影',
            x:'center'
        },
        tooltip : {
            trigger: 'item',
            formatter: "{a} <br/>{b} : {c} ({d}%)"
        },
        series : [
            {
                name: '访问来源',
                type: 'pie',
                radius : '55%',
                center: ['50%', '60%'],
                data:[
                    {value:335, name:'美国'},
                    {value:310, name:'中国'},
                    {value:234, name:'法国'},
                    {value:135, name:'日本'},
                    {value:1548, name:'韩国'}
                ],
                itemStyle: {
                    emphasis: {
                        shadowBlur: 10,
                        shadowOffsetX: 0,
                        shadowColor: 'rgba(0, 0, 0, 0.5)'
                    }
                }
            }
        ]
    };


    // 使用刚指定的配置项和数据显示图表。
    myChart1.setOption(option1);
</script>

<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart2 = echarts.init(document.getElementById('main2'));

    var option2 = {
        title: {
            text: '          美国在过去的五年电影业的发展状况'
        },
        xAxis: {
            data: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat']
        },
        yAxis: {},
        series: [{
            type: 'line',
            data:[220, 182, 191, 234, 290, 330, 310]
        }]
    };


    // 使用刚指定的配置项和数据显示图表。
    myChart2.setOption(option2);
</script>



